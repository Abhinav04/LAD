<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lad.lad.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Our Products"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="50dp"
        />

        <ImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/sai"
            android:layout_width="275dp"
            android:layout_height="175dp"
            android:src="@mipmap/sai"
            />

    <ImageButton

        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/replay"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/replay"
/>
    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rockman"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/rock"

/>

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ide"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/ide"/>

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wrangler"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/wrang"/>

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fiem"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/fiem"/>

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/hella"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/hella"/>

    <ImageButton
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/halonix"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:src="@mipmap/halo"/>




</LinearLayout>
    </ScrollView>





    </RelativeLayout>
