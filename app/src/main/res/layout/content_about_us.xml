<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lad.lad.AboutUs"
    tools:showIn="@layout/activity_about_us">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/r4"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rakesh Jain"
                android:textColor="#000FFF"
                android:textSize="22dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Managing Director"
                android:textColor="#FF0000"
                android:textSize="22dp"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission:"
                android:textColor="#000FFF"
                android:textSize="22dp"
                />


            <TextView
                android:layout_marginTop="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We make it possible for our customers to develop a profitable business by providing them with exclusive deals and service."
                android:textColor="#000000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vision:"
                android:textColor="#000FFF"
                android:textSize="22dp"
                />


            <TextView
                android:layout_marginTop="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To provide Genuine products of desirable and recognized brands to selected customer group with care."
                android:textColor="#000000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objectives:"
                android:textColor="#000FFF"
                android:textSize="22dp"
                />


            <TextView
                android:layout_marginTop="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">Sustainable profitability and reliability: we take good care of our customers and the environment."
                android:textColor="#000000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_marginTop="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">Professionalism: we work with professional pride and passion."
                android:textColor="#000000"
                android:textSize="15dp"
                />
            <TextView
                android:layout_marginTop="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">Customer loyalty: we strive for long-lasting partnerships by creating added value for our customer's business."
                android:textColor="#000000"
                android:textSize="15dp"
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
