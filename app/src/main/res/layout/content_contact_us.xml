<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lad.lad.ContactUs"
    tools:showIn="@layout/activity_contact_us">

    <TextView
        android:textColor="#ff0000"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunkar Auto Distributors"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/add"
        android:textColor="#000FFF"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_below="@id/textView6"
        />

    <TextView
        android:id="@+id/desc"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_below="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="27,Bhairav Complex,Minerva circle,J.C.road,Opp hotel TAP,MTB Road,Bangalore-02."

        />

    <TextView

        android:id="@+id/mail"
        android:textColor="#000FFF"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_below="@id/desc"
        />


    <TextView
        android:id="@+id/descemail"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_below="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lunkarbangalore@gmail.com"

        />


    <TextView

        android:id="@+id/phone"
        android:textColor="#000FFF"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_below="@id/descemail"
        />

    <TextView
        android:id="@+id/descphone"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_below="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="09341244908"

        />




</RelativeLayout>
